<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:background="@drawable/shape_white_bg"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/all_publish_message"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:drawableEnd="@drawable/icon_arrow_right_blue"
            android:gravity="center_vertical"
            android:id="@+id/tv_publish"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/all_publish"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

    <include layout="@layout/layout_divider_gray" />

    <!--topic-->
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent">

        <android.support.design.widget.TextInputEditText
            android:hint="@string/all_topic"
            android:id="@+id/et_publish_topic"
            android:inputType="text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingStart="12dp"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

    </android.support.design.widget.TextInputLayout>

    <!--message-->
    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.design.widget.TextInputEditText
            android:hint="@string/all_message"
            android:id="@+id/et_publish_message"
            android:inputType="text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingStart="12dp"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/rg_publish"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/all_qos"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_pub_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:text="0"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:checked="false"
            android:id="@+id/rb_pub_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:checked="false"
            android:id="@+id/rb_pub_2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:checked="false"
            android:id="@+id/cb_retained"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:text="@string/all_retained"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>