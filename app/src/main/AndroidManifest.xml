<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zxm.easymqttclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.MqttApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.MainActivity">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <!--建立连接-->
        <activity
            android:name=".activity.NewConnectionActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--订阅&发布-->
        <activity
            android:name=".activity.ConnectionDetialActivity"
            android:label="@string/all_subscibe_publish"
            android:screenOrientation="portrait" />

        <service android:name="com.coding.zxm.mqtt_master.service.MqttService" />
    </application>

</manifest>